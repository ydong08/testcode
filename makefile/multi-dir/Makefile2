
include scripts/Makefile

#define make_module_com
#$(MAKE) -C $(1)
#endef



# compile function
define create_objs
$$($(1):%.cc=%.o):$(1)
	$$(CXX) $$(CXXFLAGS) $$(INC) $$< -o $$(OBJPATH)/$$(notdir $$@)
endef



	-rm -rf $(objects) all

mcl:
	@echo "modules: $(modules)"
	$(foreach mo,$(modules),$(call make_module_cl,$(mo)))
	@echo "modules clean done"


clean: mcl
	$(RM) $(Target)
	@echo "clean target done"
